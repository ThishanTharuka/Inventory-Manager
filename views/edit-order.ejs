<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/nav.css">
    <link rel="stylesheet" href="/edit-page.css">
    <title>
        <%= title %>
    </title>
</head>

<body>
    <!-- Include the navigation partial -->
    <%- include('./partials/nav.ejs') %>
        <div id="container">
            <form action='/update-order' method="POST">
                <!-- Order header -->
                <div class="header">
                    <h3>Order ID: <%= order.order_id %>
                    </h3>
                    <input type="hidden" name="order_id" value="<%= order.order_id %>">
                    <h3>Order Date: <%= order.order_date.toLocaleDateString() %>
                    </h3>
                </div>
                <!-- Input field for new order date -->
                <div class="date">
                    <label for="orderDate">New Order Date:</label>
                    <input type="date" id="orderDate" name="orderDate" value="<%= order.order_date %>">
                </div>
                <div>
                    <label for="invoice_id">Invoice ID</label>
                    <input type="text" id="invoice_id" name="invoice_id" value="<%= order.invoice_id %>">
                </div>
                <div>
                    <label for="dealer_id">Dealer Name</label>
                    <input type="text" id="dealer_id" name="dealer_id" value="<%= order.dealer_id %>">
                </div>
                <!-- Table for displaying/editing order products -->
                <div class="order-table">
                    <table>
                        <!-- Table headers -->
                        <thead>
                            <tr>
                                <th>Item Code</th>
                                <th>Item Name</th>
                                <th>Quantity</th>
                                <th>Unit Price</th>
                            </tr>
                        </thead>
                        <!-- Table body -->
                        <tbody>
                            <% order.items.forEach((item, index)=> { %>
                                <tr>
                                    <!-- Display product details and allow editing -->
                                    <td>
                                        <%= item.item_code %>
                                    </td>
                                    <td>
                                        <%= item.description %>
                                    </td>
                                    <td><input type="number" name="items[<%= index %>][quantity]"
                                            value="<%= item.quantity %>">
                                        <input type="hidden" name="items[<%= index %>][item_code]"
                                            value="<%= item.item_code %>">
                                    </td>
                                    <td><input type="number" step="0.01" name="items[<%= index %>][price_per_item]"
                                            value="<%= item.price_per_item %>"></td>
                                    <input type="hidden" name="items[<%= index %>][item_code]"
                                        value="<%= item.item_code %>">
                                </tr>
                                <% }); %>
                        </tbody>
                    </table>
                </div>
                <!-- Submit button -->
                <div class="submit-btn">
                    <button type="submit">Update Order</button>
                </div>
            </form>
        </div>

</body>

</html>